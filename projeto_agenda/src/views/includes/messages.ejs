<% if (errors.length > 0) { %>
<div class="row">
  <div class="col">
    <% errors.forEach(error => { %>
    <div class="alert alert-danger"><%= error %></div>
    <% }) %>
  </div>
</div>
<% } %>


<% if (success.length > 0) { %>
<div class="row">
  <div class="col">
    <% success.forEach(message => { %>
    <div class="alert alert-success"><%= message %></div>
    <% }) %>
  </div>
</div>
<% } %>